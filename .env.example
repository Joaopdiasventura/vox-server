# Porta da API HTTP
PORT=3000

# Rounds do bcrypt para hash de senha
SALTS=10

# URLs base
URL=http://localhost:3000
CLIENT_URL=http://localhost:4200

# Segredo JWT
JWT_SECRET=VOX

# Preço unitário do voto (em centavos)
# Ex.: 100 = R$1,00
VOTE_PRICE=1

# MongoDB
# Local: use localhost; em Docker Compose, use mongodb://db:27017/vox
MONGO_URI=mongodb://localhost:27017/vox

# Mercado Pago
# A implementação atual lê configService.get("mp.accessToken").
# Você pode definir diretamente "mp.accessToken" aqui, ou usar MP_ACCESS_TOKEN
# e mapear via um loader de config.
mp.accessToken=
MP_ACCESS_TOKEN=

